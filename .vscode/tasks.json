{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-g",
				"-std=c++11",
				"./**.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		},
		{
			"type": "cppbuild",
			"label": "Lexer unit tests",
			"command": "/usr/bin/clang++",
			"args": [
				"-g",
				"-std=c++11",
				"-I.",
				"./unit_tests/UnitTestLexer.cpp",
				"Lexer.cpp",
				"LexerToken.cpp"
				"-o",
				"${fileDirname}/bin/lexer_unittest"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		},
		{
			"type": "cppbuild",
			"label": "Test Unit tests",
			"command": "/usr/bin/clang++",
			"args": [
				"-g",
				"-std=c++11",
				"-I.",
				"./unit_tests/TestUnitTest.cpp",
				"-o",
				"${fileDirname}/bin/testunittest"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		}

	]
}